@using Microsoft.AspNetCore.Http
@using Tour0Suisse.Web.Models
@model IEnumerable<Tour0Suisse.Model.ViewTournament>

@{
    TexteFr TB = TexteFr.Instance;
}

<h2>@ViewData["Title"]</h2>

<p>
    @if (bool.TryParse(Context.Session.GetString("Orga"), out bool Orga) && Orga)
    {
        <a class="btn btn-primary" asp-action="Create">@TB.Tournoi_Index_BtnNew</a>
    }
</p>
<table class="table List Search table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxNumberPlayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeckListNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ppwin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ppdraw)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pplose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Over)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxNumberPlayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeckListNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ppwin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ppdraw)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pplose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Over)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdTournament">@TB.Tournoi_Index_Detail</a> 
            </td>
        </tr>
}
    </tbody>
</table>
