@using Tour0Suisse.Web.Models
@model Tour0Suisse.Model.Utilisateur

@{
    TexteFr TB = TexteFr.Instance;
}
<div class="container div-row">
    <div class="col-lg-4">

        <h2>@ViewData["Title"]</h2>
        <h3>@ViewData["Message"]</h3>

        <form asp-controller="User" asp-action="LogIn" method="post" class="form-horizontal">
            @if (ViewBag.error != null)
            {
<div class="warning">
    <span class="text-danger">@((string) @ViewBag.error)</span>
</div>}
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@TB.User_Connexion_Login" class="btn btn-default" />
            </div>
            <br />
        </form>
    </div>
</div>